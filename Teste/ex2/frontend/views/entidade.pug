extends index

block content 
    h1= titulo 
    p Entidade Comunicante: #{nipc}
    table
        thead 
            tr
                th ID
                th Contrato
                th Data de Celebração
                th Preço Contratual
        tbody
            each contrato in contratos
                tr
                    td
                        a(href='/' + contrato["_id"]) #{contrato["_id"]}
                    td= contrato.objectoContrato
                    td= contrato.dataCelebracaoContrato
                    td= contrato.precoContratual
                    td
                        a(href='/' + contrato["_id"]) Visualizar
                        a(href='/' + contrato["_id"] + '/edit') Editar
                        a(href='/' + contrato["_id"] + '/delete') Eliminar